<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    >

    <com.bjzt.uye.views.component.YHeaderView
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        ></com.bjzt.uye.views.component.YHeaderView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/header"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <!--时间-->
            <com.bjzt.uye.views.component.ItemView
                android:id="@+id/item_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                ></com.bjzt.uye.views.component.ItemView>

            <!--工作地点-->
            <com.bjzt.uye.views.component.ItemView
                android:id="@+id/item_addr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                ></com.bjzt.uye.views.component.ItemView>

            <!--工作单位-->
            <com.bjzt.uye.views.component.ItemView
                android:id="@+id/item_cp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                ></com.bjzt.uye.views.component.ItemView>

            <!--担任职位-->
            <com.bjzt.uye.views.component.ItemView
                android:id="@+id/item_position"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                ></com.bjzt.uye.views.component.ItemView>

            <!--月薪-->
            <com.bjzt.uye.views.component.ItemView
                android:id="@+id/item_salary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                ></com.bjzt.uye.views.component.ItemView>

            <!--工作状态-->
            <com.bjzt.uye.views.component.ItemView
                android:id="@+id/item_work_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                ></com.bjzt.uye.views.component.ItemView>

            <!--就业印记-->
            <com.bjzt.uye.views.component.PicSelectView
                android:id="@+id/pic_select_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                ></com.bjzt.uye.views.component.PicSelectView>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/login_btn_height"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="42dp"
                android:gravity="center"
                android:background="@drawable/btn_login_selector"
                android:text="@string/commit"
                android:textColor="@color/common_white"
                android:textSize="18.5sp"
                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>