<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    >

    <com.bjzt.uye.views.component.YHeaderView
        android:id="@id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        ></com.bjzt.uye.views.component.YHeaderView>

    <com.bjzt.uye.views.component.ExtendEditText
        android:id="@+id/edit_pwd"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_modify_pwd_item_height"
        android:layout_below="@id/header"
        android:background="@color/common_white"
        ></com.bjzt.uye.views.component.ExtendEditText>


    <com.bjzt.uye.views.component.ExtendEditText
        android:id="@+id/edit_pwd_again"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_modify_pwd_item_height"
        android:layout_below="@id/edit_pwd"
        android:background="@color/common_white"
        ></com.bjzt.uye.views.component.ExtendEditText>

    <View
        android:id="@+id/view_line"
        android:layout_height="1px"
        android:layout_width="fill_parent"
        android:layout_below="@id/edit_pwd"
        android:layout_marginLeft="@dimen/common_margin"
        android:background="@color/common_line_divider"
        ></View>

</RelativeLayout>