<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/apply_id_guide_img"
        android:layout_marginRight="@dimen/common_margin_6"
        android:layout_marginTop="@dimen/common_margin_8"
        android:layout_alignParentRight="true"
        />


    <ImageView
        android:id="@+id/btn_try"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/img_icon"
        android:background="@drawable/apply_id_guide_btn_try"
        android:layout_marginTop="@dimen/common_margin_18"
        android:layout_marginRight="@dimen/common_margin"
        />

    <ImageView
        android:id="@+id/btn_know"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/apply_id_guide_btn_know"
        android:layout_alignTop="@id/btn_try"
        android:layout_toLeftOf="@id/btn_try"
        android:layout_marginRight="@dimen/common_margin_18"
        />


</RelativeLayout>