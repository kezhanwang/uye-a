<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <ImageView
        android:id="@+id/img_loanDialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:scaleType="fitCenter" />

    <View
        android:layout_height="@dimen/loanDialog_margin"
        android:layout_width="fill_parent"
        ></View>

    <TextView
        android:id="@+id/textView_loanDialog_item1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/modifyDialog_item_height"
        android:layout_marginBottom="@dimen/modifyDialog_marginBottom"
        android:background="@drawable/menu_btn_item_top_selector"
        android:gravity="center"
        android:singleLine="true"
        android:text="拍照"
        android:textColor="@color/common_green"
        android:textSize="@dimen/modifyDialog_textSize" />

    <TextView
        android:id="@+id/textView_loanDialog_item2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/modifyDialog_item_height"
        android:layout_marginBottom="@dimen/modifyDialog_marginBottom"
        android:background="@drawable/menu_btn_item_bottom_selector"
        android:gravity="center"
        android:singleLine="true"
        android:text="从相册选择"
        android:textColor="@color/common_green"
        android:textSize="@dimen/modifyDialog_textSize" />

    <TextView
        android:id="@+id/textView_loanDialog_cancel"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/modifyDialog_item_height"
        android:layout_marginBottom="@dimen/modifyDialog_margin"
        android:layout_marginTop="@dimen/modifyDialog_margin"
        android:background="@drawable/menu_btn_item_singal_selector"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/cancle"
        android:textColor="@color/common_font_3"
        android:textSize="@dimen/modifyDialog_textSize" />

</LinearLayout>