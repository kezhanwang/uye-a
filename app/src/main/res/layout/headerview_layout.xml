<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_bar_height"
    android:background="@color/common_white"
    android:id="@+id/rela_main"
    >

    <RelativeLayout
        android:id="@+id/rela_left"
        android:layout_height="fill_parent"
        android:layout_width="@dimen/header_bar_height"
        android:layout_alignParentLeft="true"
        android:background="@drawable/header_rela_bg"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/img_back"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:layout_marginLeft="12.5dp"
            />
    </RelativeLayout>



    <!-- header的Title部分 -->
    <TextView
        android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:textSize="19sp"
        android:textColor="@color/common_font_3"
        android:textStyle="normal"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <!-- header的右侧部分 -->
    <RelativeLayout
        android:id="@+id/rela_right"
        android:layout_width="@dimen/header_bar_right_width"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/header_rela_bg"
        >
        <TextView
            android:id="@+id/textView_header_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="16.5sp"
            android:textColor="@color/common_font_3"
            android:gravity="center"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/img_header_right"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scaleType="center"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>


    <View
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#cccccc"
        android:layout_alignParentBottom="true"
        ></View>

</RelativeLayout>