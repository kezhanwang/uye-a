<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_loc_item_height_l"
    android:background="@color/common_white"
    android:id="@+id/home_loc_rela_main"
    >

    <LinearLayout
        android:id="@+id/linear_loc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/common_margin"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/txt_loc_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您当前的位置在"
            android:textSize="15sp"
            android:textColor="@color/common_font_3"
            />

        <TextView
            android:id="@+id/txt_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="翡翠教育(中关村校区)"
            android:textColor="@color/common_green"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/common_margin_2"
            />

    </LinearLayout>

    <Button
        android:id="@+id/home_btn_ok"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_btn_height"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:background="@drawable/home_loc_img_btn"
        android:layout_below="@id/linear_loc"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/common_white"
        android:text="立即签约"
        android:layout_marginTop="@dimen/common_margin"
        />

    <LinearLayout
        android:id="@+id/home_loc_linear_bottom_tips"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/home_btn_ok"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="22dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没猜对?"
            android:textSize="13sp"
            android:textColor="@color/common_font_3"
            />

        <TextView
            android:id="@+id/home_loc_txt_clickme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_green"
            android:text="请戳我"
            android:textSize="13sp"
            android:layout_marginLeft="@dimen/common_margin_10"
            android:background="@drawable/round_white_fill_green_border_shape"
            />

    </LinearLayout>


    <com.bjzt.uye.views.component.DividerItemView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ></com.bjzt.uye.views.component.DividerItemView>

</RelativeLayout>