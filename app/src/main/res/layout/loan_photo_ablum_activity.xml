<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <com.bjzt.uye.views.component.YHeaderView
        android:id="@+id/header"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />
    
    <com.bjzt.uye.photo.view.LoanAblumButtonArea
        android:id="@+id/btn_area"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        ></com.bjzt.uye.photo.view.LoanAblumButtonArea>
    
    <GridView 
        android:id="@+id/grid_view"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/btn_area"
        android:layout_marginTop="5dp"
		android:layout_marginLeft="@dimen/loan_pic_local_imgview_margin"
		android:layout_marginRight="3dp"
		android:verticalSpacing="@dimen/loan_pic_local_imgview_margin"
		android:horizontalSpacing="@dimen/loan_pic_local_imgview_margin"
		android:numColumns="3"
		android:stretchMode="columnWidth"
		android:listSelector="@null"
		android:background="#eeeeee"
		android:gravity="center" 
		android:overScrollMode="never"
		android:fadingEdge="none"
		android:scrollbarStyle="outsideInset"
        ></GridView>
    
</RelativeLayout>
