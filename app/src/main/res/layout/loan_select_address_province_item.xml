<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/loan_select_address_rl_item"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_view_height"
        android:background="@drawable/more_setting_bg_selector"
        >

        <TextView
            android:id="@+id/loan_select_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:text="安道尔"
            android:textColor="@color/common_font_3"
            android:layout_centerVertical="true"
            android:textSize="@dimen/common_font_size_16"
            />

        <ImageView
            android:id="@+id/loan_select_address_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_margin"
            />


        <ImageView
            android:id="@+id/loan_img_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/banklist_img_select"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/loan_select_address_name"
            android:layout_marginLeft="3dp"
            />

</RelativeLayout>