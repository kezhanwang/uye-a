<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:clipChildren="false"
    >

    <RelativeLayout
        android:id="@+id/rela_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        >

        <TextView
            android:id="@+id/txt_first"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:maxWidth="82dp"
            android:text="---"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textSize="16.5sp"
            android:textColor="@drawable/textcolor_qa_cat"
            android:background="@drawable/btn_qa_cat_selector"
            android:singleLine="true"
            />

        <ImageView
            android:id="@+id/img_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_loc_del"
            android:layout_toRightOf="@id/txt_first"
            android:layout_alignTop="@id/txt_first"
            android:layout_marginLeft="-16dp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rela_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rela_first"
        android:clipChildren="false"
        >

        <TextView
            android:id="@+id/txt_second"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:maxWidth="82dp"
            android:text="---"
            android:layout_centerVertical="true"
            android:textSize="16.5sp"
            android:textColor="@drawable/textcolor_qa_cat"
            android:layout_marginLeft="@dimen/common_margin"
            android:background="@drawable/btn_qa_cat_selector"
            android:singleLine="true"
            />

        <ImageView
            android:id="@+id/img_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_loc_del"
            android:layout_toRightOf="@id/txt_second"
            android:layout_alignTop="@id/txt_second"
            android:layout_marginLeft="-16dp"
            />

    </RelativeLayout>

    

    <RelativeLayout
        android:id="@+id/rela_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rela_second"
        android:clipChildren="false"
        >

        <TextView
            android:id="@+id/txt_third"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:maxWidth="82dp"
            android:text="---"
            android:layout_centerVertical="true"
            android:textSize="16.5sp"
            android:textColor="@drawable/textcolor_qa_cat"
            android:layout_marginLeft="@dimen/common_margin"
            android:background="@drawable/btn_qa_cat_selector"
            android:singleLine="true"
            />

        <ImageView
            android:id="@+id/img_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_loc_del"
            android:layout_toRightOf="@id/txt_third"
            android:layout_alignTop="@id/txt_third"
            android:layout_marginLeft="-16dp"
            />

    </RelativeLayout>

    
    <RelativeLayout
        android:id="@+id/rela_forth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rela_third"
        android:clipChildren="false"
        >

        <TextView
            android:id="@+id/txt_forth"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="---"
            android:layout_centerVertical="true"
            android:textSize="16.5sp"
            android:textColor="@drawable/textcolor_qa_cat"
            android:layout_marginLeft="@dimen/common_margin"
            android:background="@drawable/btn_qa_cat_selector"
            android:singleLine="true"
            />

        <ImageView
            android:id="@+id/img_forth"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/img_loc_del"
            android:layout_toRightOf="@id/txt_forth"
            android:layout_alignTop="@id/txt_forth"
            android:layout_marginLeft="-16dp"
            android:scaleType="fitXY"
            />

    </RelativeLayout>

</RelativeLayout>
