<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/headerview_height"
    android:background="@drawable/more_setting_bg_selector"
    android:id="@+id/rela_main"
    >

    <com.bjzt.uye.views.component.CircleImageView
        android:id="@+id/img_logo"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:src="@drawable/user_icon"
        />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_logo"
        android:layout_marginLeft="@dimen/myinfo_headerview_nickname_left_margin"
        android:layout_alignTop="@id/img_logo"
        android:textSize="17sp"
        android:textColor="@color/myinfo_nick_txt_color"
        android:text="游客"
        />

    <TextView
        android:id="@+id/txt_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_logo"
        android:layout_marginLeft="@dimen/myinfo_headerview_nickname_left_margin"
        android:textColor="@color/myinfo_nick_txt_color"
        android:textSize="13sp"
        android:layout_alignBottom="@id/img_logo"
        android:text="位置"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/img_right"
        android:layout_marginRight="18dp"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>