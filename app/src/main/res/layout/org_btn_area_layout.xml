<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:background="@color/common_white"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:id="@+id/rela_phone"
            android:layout_width="112dp"
            android:layout_height="fill_parent"
            android:background="@drawable/more_setting_bg_selector"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/org_detail_img_phone"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_phone"
                android:textSize="16sp"
                android:textColor="@color/common_green"
                android:text="机构电话"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


        <View
            android:layout_height="fill_parent"
            android:layout_width="1px"
            android:background="@color/common_line_divider"
            ></View>

        <RelativeLayout
            android:id="@+id/rela_fav"
            android:layout_width="112dp"
            android:layout_height="fill_parent"
            android:background="@drawable/more_setting_bg_selector"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/img_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/org_detail_img_fav_ed"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_fav"
                android:textSize="16sp"
                android:textColor="@color/common_green"
                android:text="收藏"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <View
            android:layout_height="fill_parent"
            android:layout_width="1px"
            android:background="@color/common_line_divider"
            ></View>

        <RelativeLayout
            android:id="@+id/rela_btn_sign"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/rect_btn_login_selector"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/common_white"
                android:text="@string/just_sign"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_height="1px"
        android:layout_width="fill_parent"
        android:background="@color/common_line_divider"
        ></View>

</RelativeLayout>