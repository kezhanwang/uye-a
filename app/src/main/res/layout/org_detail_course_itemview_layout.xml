<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rela_main"
    >

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/common_margin_6"
        android:src="@drawable/rect_grey_shape"
        />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_logo"
        android:layout_marginTop="@dimen/common_margin_2"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="15sp"
        android:textColor="@color/common_font_3"
        android:text="@string/common_default"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/common_margin_2"
        />
</RelativeLayout>