<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/item_view_height"
    android:minHeight="@dimen/item_view_height"
    android:background="@drawable/more_setting_bg_selector"
    android:id="@+id/rela_main"
    >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:textColor="@color/common_font_3"
        android:layout_marginLeft="@dimen/common_margin"
        />

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/img_right"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_margin"
        />

    <TextView
        android:id="@+id/txt_tail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/img_arrow"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_margin_18"
        android:textSize="15sp"
        android:textColor="@color/common_a5"
        />

    <View
        android:layout_height="1px"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/common_margin"
        android:background="@color/common_line_divider"
        ></View>

</RelativeLayout>