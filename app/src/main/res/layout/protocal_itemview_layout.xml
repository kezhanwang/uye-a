<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/pro_img_flag"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/img_protocal_flag_normal"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/pro_txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_default"
        android:textColor="@color/common_font_3"
        android:layout_marginLeft="3dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/pro_img_flag"
        />

</RelativeLayout>
