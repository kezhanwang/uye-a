<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rela_main"
    android:background="@drawable/more_setting_bg_selector"
    >

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="108.7dp"
        android:layout_height="81dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="#f2f2f2"
        />

    <TextView
        android:id="@+id/txt_dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/common_font_9"
        android:text="1.3km"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginTop="@dimen/common_margin_18"
        />

    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/common_font_3"
        android:layout_toRightOf="@id/img_logo"
        android:layout_toLeftOf="@id/txt_dis"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/common_margin_4"
        android:layout_marginRight="6dp"
        android:text="樱花英语(中关村校区)"
        android:layout_alignTop="@id/img_logo"
        />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="82dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_login_selector"
        android:textColor="@color/common_white"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_below="@id/txtname"
        android:layout_marginTop="@dimen/common_margin_6"
        android:text="申请"
        />

    <TextView
        android:id="@+id/txt_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/common_font_9"
        android:text="语言"
        android:layout_below="@id/txtname"
        android:layout_alignLeft="@id/txtname"
        android:layout_marginTop="@dimen/common_margin_8"
        />

    <TextView
        android:id="@+id/txt_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/common_font_9"
        android:text="一对一口语；海外游学课程"
        android:layout_alignBottom="@id/img_logo"
        android:layout_alignLeft="@id/txtname"
        android:layout_marginTop="@dimen/common_margin_8"
        android:singleLine="true"
        android:layout_marginRight="@dimen/common_margin"
        />

    <View
        android:layout_height="1px"
        android:layout_width="fill_parent"
        android:layout_below="@id/img_logo"
        android:background="@color/common_line_divider"
        android:layout_marginLeft="@dimen/common_margin"
        ></View>

</RelativeLayout>