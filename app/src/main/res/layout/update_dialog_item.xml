<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/out_bg">

    <TextView
        android:id="@+id/update_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="left|center_vertical"
        android:paddingRight="@dimen/common_margin_10"
        android:paddingLeft="@dimen/common_margin_10"
        android:textSize="@dimen/common_font_size_17"
        android:textColor="@color/common_green"
        android:text="新版本完美上线，快来升级体验吧！"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:paddingRight="@dimen/common_margin_10"
        android:paddingLeft="@dimen/common_margin_10"
        android:background="@color/upgrade_color_disable"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        />
    
    <TextView
        android:id="@+id/update_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/common_margin_10"
        android:paddingLeft="@dimen/common_margin_10"
        android:gravity="left"
        android:textSize="@dimen/dialog_upgrade_time_txt_size"
        android:textColor="@color/dialog_upgrade_timeColor"
        />

    <TextView
        android:id="@+id/update_size"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingRight="@dimen/dialog_uograde_padding"
        android:paddingLeft="@dimen/dialog_uograde_padding"
        android:textSize="@dimen/dialog_upgrade_time_txt_size"
        android:textColor="@color/dialog_upgrade_timeColor"/>

    <TextView
        android:id="@+id/update_tips"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:paddingRight="@dimen/dialog_uograde_padding"
        android:paddingLeft="@dimen/dialog_uograde_padding"
        android:gravity="left"
        android:textSize="@dimen/dialog_upgrade_time_txt_size"
        android:textColor="@color/dialog_upgrade_timeColor"
        android:layout_marginBottom="@dimen/dialog_uograde_padding"
        />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:paddingRight="@dimen/dialog_uograde_padding"
        android:paddingLeft="@dimen/dialog_uograde_padding"
        android:background="@color/dialog_upgrade_lineColor"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        
        <View
            android:id="@+id/update_divider"
            android:layout_width="@dimen/dialog_upgrade_line_height"
            android:layout_height="fill_parent"
            android:layout_marginTop="1px"
            android:layout_marginBottom="1px"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@color/dialog_upgrade_lineColor"
            />
        
        <TextView
            android:id="@+id/update_cancel"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/update_divider"
            android:gravity="center"
            android:text="@string/cancle"
            android:textSize="@dimen/dialog_upgrade_btn_txt_size"
            android:background="@drawable/out_btn_left_selector"
            android:textColor="@color/txtview_upgrade_grey_color"
            />

        <TextView
            android:id="@+id/update_confirm"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/update_divider"
            android:gravity="center"
            android:textSize="@dimen/dialog_upgrade_btn_txt_size"
            android:textColor="@color/txtview_upgrade_grey_color"
            android:text="升级"
            android:background="@drawable/out_btn_right_selector"
            />
    </RelativeLayout>

</LinearLayout>
